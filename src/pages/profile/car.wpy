<style lang="scss">
.car {
  .region_section_main {
    .car_picker {
      border-bottom: 1rpx dashed #DADADA;
    }
  }
  &_images {
    &_add {
      padding: 20rpx 0;
    }
    &_list {
      padding-top: 30rpx;
      padding-bottom: 20rpx;
      overflow: hidden;
      &_item {
        float: left;
        width: 300rpx;
        height: 200rpx;
        margin-right: 10rpx;
        margin-bottom: 10rpx;
        position: relative;
        &:nth-child(even) {
          margin-right: 0;
        }
      }
      &_img {
        width: 100%;
        height: 100%;
      }
      &_overlay {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
