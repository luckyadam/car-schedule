        background-color: rgba(255,255,255, .7);
        &.uploading {
          .loading {
            position: absolute;
            top: 50%;
            left: 50%;
            margin-top: -14rpx;
            margin-left: -14rpx;
          }
        }
        &.error {
          .tip {
            position: absolute;
            width: 100%;
            top: 50%;
            transform: translateY(-50%);
            color: #EB3034;
