<style lang="scss">
  .trips {
    &_tab {
      &_hd {
        display: flex;
        background: linear-gradient(to bottom, #EB3434, #EB7234);
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 10;
        &_item {
          width: 100%;
          flex: 1;
          text-align: center;
          color: rgba(255,255,255,.8);
          height: 80rpx;
          line-height: 80rpx;
          font-size: 24rpx;
          &.active {
            color: #FFFFFF;
          }
        }
        &_indicator {
          width: 25%;
          height: 6rpx;
          bottom: 0;
          left: 0;
          background: #FFFFFF;
          position: absolute;
          transition: transform .2s ease-in-out;
          &_active1 {
            transform: translateX(100%);
          }
          &_active2 {
            transform: translateX(200%);
          }
          &_active3 {
            transform: translateX(300%);
          }
        }
      }
      &_bd {
        background: #F5F5F5;
        padding: 20rpx;
        margin-top: 80rpx;
        margin-bottom: 80rpx;
        &_nodata {
          text-align: center;
          padding-top: 360rpx;
          color: #A4A4A4;
          &_lk {
            border-bottom: 2rpx solid #A4A4A4;
          }
        }
        .trip-card {
          margin-bottom: 20rpx;
        }
      }
      &_title {
        font-size: 26rpx;
        color: #2D3036;
        text-align: center;
        padding: 15rpx 0;
        &:before,&:after {
          content: '';
          display: inline-block;
          width: 84rpx;
          height: 14rpx;
          background: url('data:image/png;base64,') 0 0 repeat-x;
          background-size: 15rpx;
        }
        &:before {
          margin-right: 20rpx;
        }
        &:after {
          margin-left: 20rpx;
        }
      }
    }
  }
</style>

<template>
  <view class="container trips">
    <view class="trips_tab">
      <view class="trips_tab_hd">
        <view class="trips_tab_hd_item{{tabActive === 0 ? ' active' : ''}}" @tap="changeTab(0)">全部</view>
        <view class="trips_tab_hd_item{{tabActive === 1 ? ' active' : ''}}" @tap="changeTab(1)">待出发</view>
        <view class="trips_tab_hd_item{{tabActive === 2 ? ' active' : ''}}" @tap="changeTab(2)">待匹配</view>
        <view class="trips_tab_hd_item{{tabActive === 3 ? ' active' : ''}}" @tap="changeTab(3)">已完成</view>
        <view class="trips_tab_hd_indicator{{tabActive === 1 ? ' trips_tab_hd_indicator_active1' : ''}}{{tabActive === 2 ? ' trips_tab_hd_indicator_active2' : ''}}{{tabActive === 3 ? ' trips_tab_hd_indicator_active3' : ''}}"></view>
      </view>
      <view class="trips_tab_bd">
        <view class="trips_tab_bd_item trips_tab_all" hidden="{{tabActive !== 0}}">
          <view class="trips_tab trips_tab_all_newest" wx:if="{{allTrips.newestWillDepart}}">
            <view class="trips_tab_title">即将出发</view>
            <TripCard tripData="{{allTrips.newestWillDepart}}" />
          </view>
          <view class="trips_tab trips_tab_all_others" wx:if="{{allTrips.others && allTrips.others.length}}">
            <view class="trips_tab_title">其他行程</view>
            <repeat for="{{allTrips.others}}" key="1_{{item.id}}" index="index" item="item">
              <TripCard :tripData="item" />
            </repeat>
          </view>
          <view class="trips_tab_bd_nodata" wx:if="{{!isFetchingMessage && !allTrips.newestWillDepart && (!allTrips.others || !allTrips.others.length)}}">
            您还没有行程，<text class="trips_tab_bd_nodata_lk" @tap="goToPublishTrip">前往发布</text>吧~
          </view>
        </view>
        <view class="trips_tab_bd_item" hidden="{{tabActive !== 1}}">
          <view wx:if="{{willDepartTrips.length}}">
            <repeat for="{{willDepartTrips}}" key="2_{{item.id}}" index="index" item="item">
              <TripCard :tripData="item" />
            </repeat>
          </view>
          <view class="trips_tab_bd_nodata" wx:elif="{{!isFetchingMessage}}">
            暂无待出发行程
          </view>
        </view>
        <view class="trips_tab_bd_item" hidden="{{tabActive !== 2}}">
          <view wx:if="{{waitMatchTrips.length}}">
            <repeat for="{{waitMatchTrips}}" key="3_{{item.id}}" index="index" item="item">
              <TripCard :tripData="item" />
            </repeat>
          </view>
          <view class="trips_tab_bd_nodata" wx:elif="{{!isFetchingMessage}}">
            暂无待匹配行程
          </view>
        </view>
        <view class="trips_tab_bd_item" hidden="{{tabActive !== 3}}">
          <view wx:if="{{doneTrips.length}}">
            <repeat for="{{doneTrips}}" key="4_{{item.id}}" index="index" item="item">
              <TripCard :tripData="item" />
            </repeat>
          </view>
          <view class="trips_tab_bd_nodata" wx:elif="{{!isFetchingMessage}}">
            暂无已完成行程
          </view>
        </view>
      </view>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import { connect } from 'wepy-redux'

  import TripCard from './tripCard'
  import { fetchMessages } from '../actions/message'
  import { initUserMessage } from '../actions/user'
  import { setTripInfo } from '../actions/trip'

  import { formatDate, formatTime } from '../utils/format'

  @connect({
    role (state) {
      return state.user.role
    },
    messages (state) {
      return state.user.messages
    },
    isFetchingMessage (state) {
      return state.user.isFetchingMessage
    }
  }, {
    fetchMessages,
    initUserMessage,
    setTripInfo
  })
  export default class Trips extends wepy.component {
    components = {
      TripCard
    }

    data = {
      tabActive: 0
    }

    computed = {
      allTrips () {
        if (this.messages && this.messages.length) {
          let newestWillDepart = null
          let newestWillDepartIndex = -1
          let messages = this.messages.concat()
          messages = messages.map((item, index) => {
            if (item.endTime && new Date(item.endTime).getTime() < new Date().getTime() && !item.status) {
              item.type = 4
            }
            item.startTime = `${formatDate(item.startTime)} ${formatTime(item.startTime)}`
            item.endTime = `${formatDate(item.endTime)} ${formatTime(item.endTime)}`
            if (item.type === 1) {
              item.statusShow = '待出发'
            } else if (item.type === 2) {
              item.statusShow = '待匹配'
            } else if (item.type === 3) {
              item.statusShow = '已完成'
            } else if (item.type === 4) {
              item.statusShow = '已过期'
            }
            if (item.car) {
              item.carShow = `${item.car.number}座，${item.car.brand}`
            }
            if (item.type === 1) {
              newestWillDepartIndex = index
              newestWillDepart = item
            }
            item.role = this.role
            return item
          })
          if (newestWillDepartIndex >= 0) {
            messages.splice(newestWillDepartIndex, 1)
          }
          return {
            newestWillDepart,
            others: messages
          }
        }
        return {
          newestWillDepart: null,
          others: []
        }
      },

      willDepartTrips () {
        if (this.messages && this.messages.length) {
          const messages = this.messages.concat()
          const willDepart = messages.map((item, index) => {
            if (item.type === 1) {
              item.statusShow = '待出发'
              if (item.car) {
                item.carShow = `${item.car.number}座，${item.car.brand}`
              }
              item.role = this.role
              return item
            }
          }).filter(item => item)
          return willDepart
        }
        return []
      },

      waitMatchTrips () {
        if (this.messages && this.messages.length) {
          const messages = this.messages.concat()
          const waitMatch = messages.map((item, index) => {
            if (item.type === 2) {
              item.statusShow = '待匹配'
              if (item.car) {
                item.carShow = `${item.car.number}座，${item.car.brand}`
              }
              item.role = this.role
              return item
            }
          }).filter(item => item)
          return waitMatch
        }
        return []
      },

      doneTrips () {
        if (this.messages && this.messages.length) {
          const messages = this.messages.concat()
          const done = messages.map((item, index) => {
            if (item.type === 3) {
              item.statusShow = '已完成'
              if (item.car) {
                item.carShow = `${item.car.number}座，${item.car.brand}`
              }
              item.role = this.role
              return item
            }
          }).filter(item => item)
          return done
        }
        return []
      }
    }

    methods = {
      changeTab (idx) {
        this.tabActive = +idx
      },

      goToPublishTrip () {
        this.methods.setTripInfo({
          type: 'new',
          from: 'list'
        })
        this.$emit('switchTab', 1)
      }
    }

    init () {
      this.methods.initUserMessage()
      this.methods.fetchMessages(this.role, {
        page: 0,
        size: 20,
        type: 0
      })
    }

    events = {
      showTrips: () => {
        this.init()
      }
    }

    async onLoad () {
      await wepy.setNavigationBarTitle({
        title: '我的行程'
      })
      this.init()
    }
  }
</script>
